<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_event_log.domain_event_dispatcher" class="Sulu\Bundle\EventLogBundle\Dispatcher\DomainEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="Sulu\Bundle\EventLogBundle\Dispatcher\DomainEventDispatcherInterface" alias="sulu_event_log.domain_event_dispatcher"/>

        <service id="sulu_event_log.doctrine_domain_event_collector" class="Sulu\Bundle\EventLogBundle\Collector\DoctrineDomainEventCollector">
            <argument type="service" id="sulu_event_log.domain_event_dispatcher"/>

            <tag name="doctrine.event_subscriber" />
        </service>
        <service id="Sulu\Bundle\EventLogBundle\Collector\DoctrineDomainEventCollectorInterface" alias="sulu_event_log.doctrine_domain_event_collector"/>

        <service id="sulu_event_log.persist_event_record_subscriber" class="Sulu\Bundle\EventLogBundle\Subscriber\PersistEventRecordSubscriber">
            <argument type="service" id="sulu.repository.event_record"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="sulu_event_log.set_domain_event_user" class="Sulu\Bundle\EventLogBundle\Subscriber\SetDomainEventUserSubscriber">
            <argument type="service" id="security.helper"/>

            <tag name="kernel.event_subscriber" />
        </service>

        <!--PERSISTENCE BUNDLE REPOSITORIES-->
        <service id="Sulu\Bundle\EventLogBundle\Entity\EventRecordRepositoryInterface" alias="sulu.repository.event_record"/>
    </services>
</container>
