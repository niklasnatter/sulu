<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_event_log.domain_event_dispatcher" class="Sulu\Bundle\EventLogBundle\Dispatcher\DomainEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="Sulu\Bundle\EventLogBundle\Dispatcher\DomainEventDispatcherInterface" alias="sulu_event_log.domain_event_dispatcher"/>

        <service id="sulu_event_log.domain_event_collector" class="Sulu\Bundle\EventLogBundle\Collector\DomainEventCollector">
            <argument type="service" id="sulu_event_log.domain_event_dispatcher"/>

            <tag name="doctrine.event_subscriber" priority="-256"/>
        </service>
        <service id="Sulu\Bundle\EventLogBundle\Collector\DomainEventCollectorInterface" alias="sulu_event_log.domain_event_collector"/>

        <service id="sulu_event_log.document_domain_event_collector" class="Sulu\Bundle\EventLogBundle\Collector\DocumentDomainEventCollector">
            <argument type="service" id="sulu_event_log.domain_event_dispatcher"/>

            <tag name="sulu_document_manager.event_subscriber"/>
        </service>

        <service id="sulu_event_log.event_record_repository.null" class="Sulu\Bundle\EventLogBundle\Entity\NullEventRecordRepository">
            <argument>%sulu.model.event_record.class%</argument>
        </service>

        <service id="sulu_event_log.store_event_record_subscriber" class="Sulu\Bundle\EventLogBundle\Subscriber\StoreEventRecordSubscriber">
            <argument type="service" id="sulu_event_log.event_record_repository"/>

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="sulu_event_log.set_domain_event_user_subscriber" class="Sulu\Bundle\EventLogBundle\Subscriber\SetDomainEventUserSubscriber">
            <argument type="service" id="security.helper" on-invalid="null"/>

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="sulu_event_log.dispatch_specific_domain_event_subscriber" class="Sulu\Bundle\EventLogBundle\Subscriber\DispatchSpecificDomainEventSubscriber">
            <argument type="service" id="event_dispatcher"/>

            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
