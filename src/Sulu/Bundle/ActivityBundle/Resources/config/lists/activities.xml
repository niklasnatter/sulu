<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>activities</key>

    <properties>
        <property
            name="timestamp"
            translation="sulu_admin.timestamp"
            visibility="always"
            searchability="never"
            sortable="false"
            width="shrink"
        >
            <field-name>timestamp</field-name>
            <entity-name>%sulu.model.activity.class%</entity-name>

            <transformer type="datetime">
                <params>
                    <param name="skin" value="light"/>
                    <param name="format" value="relative"/>
                </params>
            </transformer>
        </property>

        <property
            name="type"
            translation="sulu_admin.type"
            visibility="always"
            searchability="never"
            sortable="false"
            width="shrink"
        >
            <field-name>type</field-name>
            <entity-name>%sulu.model.activity.class%</entity-name>

            <transformer type="icon">
                <params>
                    <param name="skin" value="dark"/>
                    <param name="default" value="su-pen"/>

                    <param name="mapping" type="collection">
                        <param name="created" value="su-plus"/>
                        <param name="modified" value="su-pen"/>
                        <param name="removed" value="su-trash-alt"/>
                        <param name="cache_cleared" value="su-paint"/>
                        <param name="moved" value="su-arrows-alt"/>
                        <param name="copied" value="su-copy"/>
                        <param name="published" value="su-upload"/>
                        <param name="unpublished" value="su-download"/>
                        <param name="merged" value="fa-code-fork"/>
                        <param name="enabled" value="su-check"/>
                        <param name="locked" value="su-lock"/>
                        <param name="unlocked" value="su-lock"/>
                        <param name="draft_removed" value="su-clean"/>
                        <param name="children_reordered" value="su-exchange-up"/>
                        <param name="translation_added" value="su-language"/>
                        <param name="translation_copied" value="su-language"/>
                        <param name="translation_removed" value="su-language"/>
                        <param name="keyword_added" value="fa-font"/>
                        <param name="keyword_modified" value="fa-font"/>
                        <param name="keyword_removed" value="fa-font"/>
                        <param name="contact_added" value="su-user"/>
                        <param name="contact_removed" value="su-user"/>
                        <param name="media_added" value="su-image"/>
                        <param name="media_removed" value="su-image"/>
                        <param name="route_removed" value="su-link"/>
                        <param name="crop_modified" value="su-cut"/>
                        <param name="crop_removed" value="su-cut"/>
                        <param name="preview_image_modified" value="su-image"/>
                        <param name="preview_image_removed" value="su-image"/>
                        <param name="version_added" value="su-clock"/>
                        <param name="version_removed" value="su-clock"/>
                        <param name="version_restored" value="su-process"/>
                        <param name="default_snippet_modified" value="su-snippet"/>
                        <param name="default_snippet_removed" value="su-snippet"/>
                        <param name="password_resetted" value="su-sync"/>
                    </param>
                </params>
            </transformer>
        </property>

        <!-- Visibility of this property is set to 'yes' in the ActivitiesListMetadataVisitor based on the given metadata-options -->
        <property
            name="resource"
            translation="sulu_admin.resource"
            visibility="never"
            searchability="never"
            sortable="false"
            width="shrink"
        />

        <property
            name="description"
            translation="sulu_admin.description"
            visibility="always"
            searchability="never"
            sortable="false"
            type="html"
        />
    </properties>
</list>
