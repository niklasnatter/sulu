<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_domain_event.domain_event_dispatcher" class="Sulu\Bundle\DomainEventBundle\Dispatcher\DomainEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="Sulu\Bundle\DomainEventBundle\Dispatcher\DomainEventDispatcherInterface" alias="sulu_domain_event.domain_event_dispatcher"/>

        <service id="sulu_domain_event.doctrine_domain_event_collector" class="Sulu\Bundle\DomainEventBundle\Collector\DoctrineDomainEventCollector">
            <argument type="service" id="sulu_domain_event.domain_event_dispatcher"/>

            <tag name="doctrine.event_subscriber" />
        </service>
        <service id="Sulu\Bundle\DomainEventBundle\Collector\DoctrineDomainEventCollectorInterface" alias="sulu_domain_event.doctrine_domain_event_collector"/>

        <service id="sulu_domain_event.persist_domain_event_subscriber" class="Sulu\Bundle\DomainEventBundle\Subscriber\PersistDomainEventSubscriber">
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="sulu_domain_event.set_domain_event_user" class="Sulu\Bundle\DomainEventBundle\Subscriber\SetDomainEventUserSubscriber">
            <argument type="service" id="security.helper"/>

            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
